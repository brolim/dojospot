
<div class="box" style="width:300px; margin:auto">

	<h1 id="sign_up">Criar uma conta</h1>

	<p class="claro">JÃ¡ tem uma conta? <%= link_to "Log in", login_path %>.</p>

	<% form_for @user do |f| %>
	  <%= f.error_messages %>
	  <p>
	    <%= f.label :username %><br />
	    <%= f.text_field :username, :size => 10  %>
	  </p>
	  <p>
	    <%= f.label :password, "Senha" %><br />
	    <%= f.password_field :password, :size => 10 %>
	  </p>
	  <p>
	    <%= f.label :password_confirmation, "Senha de novo" %><br />
	    <%= f.password_field :password_confirmation, :size => 10 %>
	  </p>
	  <p style="text-align: right; margin-right: 20px"><%= f.submit "Registrar" %></p>
	<% end %>

</div>